<?xml version="1.0" encoding="utf-8"?>
<preference-headers
    xmlns:android="http://schemas.android.com/apk/res/android">
    <header android:fragment="com.test.jsw.chapter4.PreferenceActivity$Prefs1Fragment"
        android:icon="@drawable/ic_settings_applications"
        android:title="程序选项设置"
        android:summary="Project Setting About"
        />

    <header
        android:fragment="com.test.jsw.chapter4.PreferenceActivity$Prefs2Fragment"
        android:icon="@drawable/ic_settings_display"
        android:title="Display Setting"
        android:summary="Set App Display About"
        >
        <extra
            android:name="website"
            android:value="www.jsw.com"
        />
    </header>


    <header
        android:icon="@drawable/ic_settings_display"
        android:title="Use Intent"
        android:summary="Use Intent Start Activity"
        >
        <intent android:action="android.intent.action.VIEW"
            android:data="http://www.jsw.com"/>
    </header>
</preference-headers>